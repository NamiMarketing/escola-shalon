---
title: Escola Shalon
layout: "base.njk"
cssPath: "/css/blog-inicio.css"
eleventyImport:
collections: ["post"]
---

{% from 'macros/header.njk' import header %}

{{ header(backLink = "/") }}

<section class="novidade">
  {% for post in collections.post | reverse | limit (7) %} {% if loop.index == 1
  %}
  <div class="principal">
    <a href="{{ post.url }}">
      <div class="foto-categoria">
        <img src="{{ post.data.thumbnail }}" alt="" />
        {% for tag in post.data.tags -%} {% if tag !== 'post' %}
        <span class="categoria-main">
          {{ tag }}
        </span>
        {% endif %} {%- endfor %}
      </div>
    </a>
  </div>
  <div class="titulo-data">
    <h3>{{ post.data.title }}</h3>
    <p class="data">{{ post.data.date | postDate }}</p>
  </div>
  <p class="post-principal">
    {{ post.data.description | safe }}
  </p>

  {% elif loop.index == 2 %}

  <div class="sidebar-item item-cima">
    <a href="{{ post.url }}">
      <div class="foto-categoria">
        <img src="{{ post.data.thumbnail }}" alt="" />
        {% for tag in post.data.tags -%} {% if tag !== 'post' %}
        <span class="categoria-side">
          {{ tag }}
        </span>
        {% endif %} {%- endfor %}
      </div>
    </a>
    <div class="titulo-data">
      <h4>{{ post.data.title }}</h4>
      <p class="data">{{ post.data.date | postDate }}</p>
    </div>
  </div>

  {% elif loop.index == 3 %}

  <div class="sidebar-item item-baixo">
    <a href="{{ post.url }}">
      <div class="foto-categoria">
        <img src="{{ post.data.thumbnail }}" alt="" />
        {% for tag in post.data.tags -%} {% if tag !== 'post' %}
        <span class="categoria-side">
          {{ tag }}
        </span>
        {% endif %} {%- endfor %}
      </div>
    </a>
    <div class="titulo-data">
      <h4>{{ post.data.title }}</h4>
      <p class="data">{{ post.data.date | postDate }}</p>
    </div>
  </div>
</section>

<div class="divisoria"></div>

<h1 class="rosa">Ãšltimos Posts</h1>

<section class="ultimos">
  {% else %}
  <a href="{{ post.url }}">
    <div class="ultimos-item flex">
      <img src="{{ post.data.thumbnail }}" alt="" />

      {% for tag in post.data.tags -%} {% if tag !== 'post' %}
      <span class="categoria">
        {{ tag }}
      </span>
      {% endif %} {% endfor %}

      <p class="data">{{ post.data.date | postDate }}</p>
      <h4>{{ post.data.title }}</h4>
      <p class="resumo">
        {{ post.data.description | safe }}
      </p>
    </div>
  </a>
  {% endif %}{% endfor %}
</section>

<div class="nav-depo">
  <div class="serie-button-prev">
    <img class="left" src="../img/left-arrow.svg" alt="botao" />
  </div>
  <div class="serie-button-next">
    <img src="../img/right-arrow.svg" alt="" />
  </div>
</div>

{% include 'footer.njk' %}
