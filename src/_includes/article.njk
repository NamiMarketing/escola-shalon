  <div class="artigos-relacionados rosa sidebar">
    <h5>Posts Relacionados</h5>
    {% set postsFiltered = collections.all | filterByTags(tags) | reverse | excludeFromCollection(page.url) | limit(2)  %}
    <ul>
      {%- for post in postsFiltered -%}
      <li>
      <a href="{{ post.url }}"> <img src="{{ post.data.thumbnail }}" alt="" />
        <div class="titulo-data">
          <h4>{{ post.data.title }}</h4>
          <p class="data">{{ post.data.date | postDate }}</p>
          </div>
        </a>
      </li>
      {%- endfor %}
    </ul>
  </div>
