<nav class="nav2" data-scroll-section>
  <a href="/">
    <img src="../../img/shalon-logo.svg" alt="logo escola batista shalon">
  </a>
  <input class="menu-btn" type="checkbox" id="menu-btn" />
  <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
  <ul class="menu">
    <li><a href="/">IN√çCIO</a></li>

    <li><a href="">CONTATO</a></li>

    <label class="menu-icon-inside mobile-only" for="menu-btn">
      <span class="navicon"></span
    ></label>
  </ul>
</nav>
<section class="blog-post">
    <div class="blog-header">
      {% if thumbnail %}
        <img src="{{ thumbnail }}" alt="" />
        {% endif %} 
    </div>
    <div class="conteudo-blog">
      <a class="darkGreenButton" href="/blog">VOLTAR</a>
      <p class="data">{{ date | postDate }}</p>
      <div class="content-container">
        {{ content | safe }}
      </div>
  </div>

