---
title: Blog
layout: "base.njk"
cssPath: "/css/blog-inicio.css"
eleventyImport:
collections: ["post"]
---

{% from 'macros/header.njk' import header %}

{{ header(backLink = "/blog") }}

<section class="main-blog">
  <div class="head-blog">
    <div class="foto-blog">
      {% if thumbnail %}
      <div class="foto-categoria">
        <img src="{{ thumbnail }}" alt="" />
        {% endif %} {% for tag in tags -%} {% if tag !== 'post' %}
        <span class="categoria-main">{{ tag }}</span>
      </div>
      {% endif %} {%- endfor %}
      <p class="data">{{ date | postDate }}</p>
    </div>
  </div>

  <div class="conteudo-blog">
    <div class="titulo-blog">
      <h3>{{ title }}</h3>
    </div>
    <div class="content-container">
      <p>{{ texto | safe }}</p>
    </div>
  </div>

