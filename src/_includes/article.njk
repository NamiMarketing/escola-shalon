 <div class="artigos-relacionados rosa sidebar">
    <h5>Outros Posts</h5>
    {% set postsFiltered = collections.item | limit(2) %}
    <ul>
      {%- for post in postsFiltered -%}
      <li>
        <img src="{{ post.data.thumbnail }}" alt="" />
        <p>
          {% for tag in post.data.tags -%} {% if tag !== 'post' %}
          {{ tag }}, {% endif %} {%- endfor %}
          {{ post.data.date | postDate }}
        </p>
        <a href="{{ post.url }}">
          {{ post.data.title }}
        </a>
      </li>
      {%- endfor %}
    </ul>
  </div>
</section> 



