    <h3>{{ title }}</h3>

    <div class="tags-container">
      {% for tag in tags -%} {% if tag !== 'post' %}
      <a href="">{{ tag }}</a>
      {% endif %} {%- endfor %}
    </div>
    {% for tag in tags -%}
    {% if tag == 'VÃ­deos' %}
